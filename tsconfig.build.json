{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"rootDir": "./src",
		"alwaysStrict": true,
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"noEmitOnError": true,
		"incremental": false,
		"types": ["node"]
	},		
	"include": ["src"],
	"exclude": [	
		"node_modules", "dist"
	]
}