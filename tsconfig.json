{
  "compilerOptions": {  
    "incremental": true,                            
    "target": "ESNext",                                
    "lib": ["ESNext"],                                       
    "module": "NodeNext",                               
    "moduleResolution": "nodenext",
    "types": ["node"],                                      
    "outDir": "./dist",                                 
    "sourceMap": true,                                
    "preserveConstEnums": true,                       
    "noEmitOnError": true,                            
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "exclude": ["node_modules", "dist"] 
}
