{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"alwaysStrict": true,
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"noEmitOnError": true,
		"incremental": true,
		"types": ["node"]
	},			
	"include": ["src/**/*.ts", "test/**/*.ts"],
	"exclude": [	
		"node_modules", "dist"
	]	
}